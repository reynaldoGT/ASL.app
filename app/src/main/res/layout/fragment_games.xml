<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/bottom_navigation_padding"
    tools:context=".ui.view.fragments.GamesMenuFragment">

    <LinearLayout
        android:id="@+id/containerGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/games_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/games"
            app:titleCentered="true" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/fragmentGamesComposeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/fragment_banner_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/test_banner_id" />
    </LinearLayout>
</FrameLayout>