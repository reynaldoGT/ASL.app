<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neo.signLanguage">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.SingLanguage">
        <activity
            android:name=".ui.view.activities.SendMessageWithImagesActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.activities.MainActivity" />
        <activity
            android:name=".ui.view.activities.FindPairGameActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activities.FindTheLetterGameActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activities.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.activities.MainActivity" />
        <activity
            android:name=".ui.view.activities.HistoryActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.activities.MainActivity" />
        <activity
            android:name=".ui.view.activities.DetailsSignActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.activities.MainActivity" />
        <activity
            android:name=".ui.view.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/test_id_application_admob" />
    </application>

</manifest>