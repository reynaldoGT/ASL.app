<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neo.signLanguage">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_rounded"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SingLanguage">
        <activity android:name="com.neo.signLanguage.SplashActivity"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neo.signLanguage.GridAllLetters"
            android:parentActivityName="com.neo.signLanguage.MainActivity" />
        <activity
            android:name="com.neo.signLanguage.MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />

    </application>

</manifest>