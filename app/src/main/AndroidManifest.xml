<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neo.signLanguage">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.SingLanguage">
        <activity
            android:name=".views.activities.TabNavigatorActivity"
            android:exported="false" />
        <activity
            android:name=".views.fragments.GiphyFragment"
            android:exported="false" />
        <activity
            android:name=".views.activities.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".views.fragments.BottomNavigationFragment" />
        <activity
            android:name=".views.activities.DetailsSingActivity"
            android:exported="false"
            android:parentActivityName=".views.fragments.BottomNavigationFragment" />
        <activity
            android:name=".views.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GridAllLetters"
            android:parentActivityName=".views.fragments.BottomNavigationFragment" />
        <activity
            android:name=".views.fragments.BottomNavigationFragment"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/test_id_application_admob" />
    </application>

</manifest>